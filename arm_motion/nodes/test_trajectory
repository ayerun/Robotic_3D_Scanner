#!/usr/bin/env python
"""Intergration testing for mover"""


import sys
import rospy
import unittest
import rostest
import arm_motion
from trajectory import TurtleBot


class TestMotion(unittest.TestCase):
    def __init__(self, *args):
        """Init a test class for mover node
        """
        super(TestMotion, self).__init__(*args)
        self.scan_side = 4

    def test_index_range(self):
        
        turtle = TurtleBot(self.scan_side)
        for i in range(self.scan_side):
            turtle.nextFace()
        self.assertEqual(turtle.curr_scan_idx,0)

    


if __name__ == '__main__':
    rostest.rosrun('arm_motion','test_motion', TestMotion, sys.argv)

